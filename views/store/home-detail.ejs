<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
  <%- include('../partials/nav') %>

  <main class="container mx-auto py-14 px-4 max-w-6xl">

    <!-- Premium Title Section -->
    <div class="text-center mb-14">
      <p class="text-xs uppercase tracking-[0.4em] text-gray-400 mb-4 font-medium">
        Property Details
      </p>

      <h1 class="text-4xl md:text-6xl font-bold text-gray-900 leading-tight">
        <%= home.houseName %>
      </h1>

      <div class="mt-4 flex justify-center items-center gap-6 text-gray-500">
        <span class="text-yellow-500 font-semibold">
          ‚òÖ <%= home.rating %>
        </span>
        <span class="h-4 w-px bg-gray-300"></span>
        <span><%= home.location %></span>
      </div>
    </div>

    <!-- Main Card -->
    <div class="bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden">

      <!-- Image Section -->
      <div class="relative w-full aspect-[16/9] overflow-hidden">

        <% 
          let imageSrc;
          if (home.photo) {
            imageSrc = '/' + home.photo.replace(/\\/g, '/');
          } else {
            imageSrc = '/images/default-home.png';
          }
        %>

        <img src="<%= imageSrc %>" 
             alt="<%= home.houseName %>" 
             class="w-full h-full object-cover transition duration-700 hover:scale-105">

        <!-- Price Floating Badge -->
        <div class="absolute bottom-6 left-6 
                    bg-white/90 backdrop-blur-lg 
                    px-6 py-3 rounded-2xl 
                    shadow-xl border border-white/40">

          <span class="text-2xl font-bold text-gray-900">
            Rs <%= home.price %>
          </span>
          <span class="text-sm text-gray-500"> / night</span>
        </div>

      </div>

      <!-- Content -->
      <div class="p-10">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">

          <!-- Description Section -->
          <div class="md:col-span-2">

            <h3 class="text-2xl font-semibold mb-6 text-gray-900">
              About this home
            </h3>

            <p class="text-gray-600 leading-relaxed text-lg">
              <%= home.description || 
              ('Located in the heart of ' + home.location + 
              ', this property offers a modern, luxurious and comfortable experience.') %>
            </p>

            <!-- Feature Cards -->
            <div class="mt-8 grid grid-cols-2 gap-6">

              <div class="bg-gray-50 rounded-2xl p-6 text-center shadow-sm hover:shadow-md transition">
                <p class="text-xs uppercase text-gray-400 tracking-widest mb-2">
                  Rating
                </p>
                <p class="text-xl font-semibold text-gray-900">
                  ‚≠ê <%= home.rating %>
                </p>
              </div>

              <div class="bg-gray-50 rounded-2xl p-6 text-center shadow-sm hover:shadow-md transition">
                <p class="text-xs uppercase text-gray-400 tracking-widest mb-2">
                  Location
                </p>
                <p class="text-xl font-semibold text-gray-900">
                  üìç Verified
                </p>
              </div>

            </div>

          </div>

          <!-- Premium Booking Sidebar -->
          <div class="md:col-span-1">

            <div class="sticky top-24 
                        bg-white/80 backdrop-blur-xl 
                        border border-gray-200 
                        rounded-3xl p-8 
                        shadow-2xl">

              <!-- Price -->
              <div class="flex justify-between items-center mb-8">
                <span class="text-3xl font-bold text-gray-900">
                  Rs <%= home.price %>
                </span>
                <span class="text-gray-500 text-sm">/ night</span>
              </div>

              <!-- Buttons -->
              <div class="space-y-4">

                <!-- Book -->
                <form action="/book/<%= home._id %>" method="POST">
                  <button type="submit"
                    class="w-full py-4 rounded-2xl
                           bg-gradient-to-r from-rose-500 to-red-500
                           text-blackfont-semibold
                           shadow-lg
                           transition-all duration-300
                           hover:-translate-y-1
                           hover:shadow-2xl
                           active:scale-95">
                    Book Now
                  </button>
                </form>

                <!-- Favourite -->
                <form action="/favourite" method="POST">
                  <input type="hidden" name="id" value="<%= home._id %>">

                  <button type="submit"
                    class="w-full py-4 rounded-2xl
                           border border-rose-500
                           text-rose-500 font-semibold
                           transition-all duration-300
                           hover:bg-rose-500
                           hover:text-white
                           hover:-translate-y-1
                           active:scale-95">
                    ‚ù§Ô∏è Add to Favourite
                  </button>
                </form>

              </div>

              <p class="text-center text-xs text-gray-400 mt-8 border-t pt-6 italic">
                Free cancellation for 48 hours
              </p>

            </div>

          </div>

        </div>
      </div>

    </div>

  </main>
</body>
</html>
