<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
  <%- include('../partials/nav') %>
  
  <main class="container mx-auto py-8 px-4">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Find your next <span class="text-red-500">adventure</span></h1>
      <p class="text-gray-500 text-sm">Explore unique homes across the globe.</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% registeredHomes.forEach(home => { %>
        <div class="group bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition duration-300">

          <div class="relative h-48 overflow-hidden">
            <img src="<%= home.photo %>" alt="Home Image" class="w-full h-full object-cover">
            
            <button class="absolute top-3 right-3 text-white drop-shadow-md hover:text-red-500 transition">
              <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
                <path d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z" />
              </svg>
            </button>
          </div>

          <div class="p-3">
            <div class="flex justify-between items-start">
              <h2 class="text-sm font-bold text-gray-800 truncate w-3/4"><%= home.houseName %></h2>
              <span class="text-xs flex items-center font-bold">
                ‚≠ê <%= home.rating %>
              </span>
            </div>
            
            <p class="text-gray-500 text-xs mb-2 flex items-center">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path></svg>
              <%= home.location %>
            </p>

            <div class="flex items-center justify-between mt-2">
               <p class="text-sm font-bold text-gray-900">Rs <%= home.price %> <span class="text-[10px] font-normal text-gray-500">night</span></p>
               <!-- <a href="/home-details/<%= home._id %>" class="bg-red-500 text-white text-[10px] px-2 py-1 rounded hover:bg-red-600 transition">
                 Book
               </a> -->
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>