<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
  <%- include('../partials/nav') %>

  <main class="container mx-auto bg-white shadow-xl rounded-2xl p-10 mt-10 max-w-6xl min-h-[60vh]">
    
    <header class="text-center mb-12">
      <h2 class="text-4xl md:text-6xl font-bold text-red-500 mb-4">My Bookings</h2>
      <div class="h-1 w-24 bg-red-500 mx-auto rounded-full"></div>
    </header>

    <% if (typeof bookings === 'undefined' || bookings.length === 0) { %>
      <div class="flex flex-col items-center justify-center py-12">
        <div class="bg-gray-100 p-6 rounded-full mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <p class="text-2xl text-gray-600 mb-8 font-medium italic">"Bookings will appear here"</p>
        <a href="/homes" class="bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-8 rounded-full transition duration-300 shadow-lg transform hover:scale-105">
          Explore Homes Now
        </a>
      </div>
    <% } else { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 text-left">
        <% bookings.forEach(booking => { %>
          <div class="border rounded-xl overflow-hidden shadow-sm hover:shadow-md transition">
             <div class="p-4 bg-gray-50 border-b italic text-sm text-gray-500">Confirmed Booking</div>
             <div class="p-4">
                <h3 class="text-xl font-bold"><%= booking.houseName %></h3>
                <p class="text-gray-600 text-sm">Location: <%= booking.location %></p>
             </div>
          </div>
        <% }) %>
      </div>
    <% } %>

  </main>
</body>
</html>