<%- include('../partials/head') %>
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md max-w-2xl">
    
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Login with Your info</h1>
    <p class="text-gray-500 text-center mb-8 -mt-4 text-sm">Fill in the details to reach thousands of guests</p>

    <form 
  action="/login" 
  method="POST"
  class="max-w-md mx-auto space-y-4">
   <%- include('../partials/errors') %>


  

      
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Please Enter Your Email</label>
        <input
          type="email"
          name="email"
          placeholder="Enter Your Email"
          value="<%= oldInput.email ? oldInput.email : '' %>"
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 transition duration-300"
          required/>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-1">Enter Your Password</label>
          <div class="relative">
            <span class="absolute left-3 top-2 text-gray-500"></span>
            <input
              type="password"
              name="password"
              placeholder="Enter Your Password"
              class="w-full pl-10 pr-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 transition duration-300"
              required/>
          </div>
        </div>
      </div>
      <div class="pt-4">
        <input 
          type="submit" 
          value="Sign In" 
          class="w-full bg-red-500 text-white font-bold py-2 rounded-md hover:bg-red-600 transition duration-300 cursor-pointer shadow-md" />
      </div>
    </form>
  </main>
</body>
</html>